/* #include <stdio.h>
int main()
{
int x, y, *p;
y = 0;
p = &y; // p = y = 0
x = *p; // x = 0
x = 4;
(*p)++; //p = 1
--x; // x = 3
(*p) += x; //p = 4
printf("x=%d y=%d *p=%d", x, y, *p); // x = 3, y=4, p=4
}
